/* pages/activityDetail/activityDetail.wxss */
.container{
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.pic-wrap,.slide-image{
  width: 100%;
  height: 350rpx;
}
.pic-wrap{
  position: relative;
}
.tab-wrap{
  flex: 1;
  box-shadow:0 -2rpx 4rpx #999;
  position: relative;
  background-color: #fff;
  overflow-y: hidden;
  display: flex;
  flex-direction: column;
}
.tab-header{
  height: 80rpx;
  padding:0 40rpx;
}
.tab-item{
  display: inline-block;
  padding: 12rpx 20rpx;
}
.tab-item.active{
  border-bottom: 6rpx solid #E13B46 ;
  color: #E13B46 ; 
}
.tab-body{
  padding: 20rpx 40rpx 128rpx 40rpx;
  flex: 1;
  overflow-y: auto;
}
.time-item-wrap{
  display: flex;
  align-items: center;
  height: 80rpx;
}
.item-point{
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background-color: #4BB7FF; 
}
.item-date{
  padding: 0 20rpx;
}
.comment-item-wrap{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 0;
}
.user-img{
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
}
.comment-content{
  margin-left: 20rpx;
  flex:1;
  font-size: 80%;
}
.comment-time-text{
  font-size: 80%;
}
.user-name{
  font-weight: 600;
}
.another-user-name{
  font-weight: 600;
  margin: 0 10rpx;
}
.user-msg{
  display: flex;
  justify-content: space-between;
}
.module-wrap,.basic-wrap{
  padding: 20rpx;
  font-size: 80%;
}
.module-title,.basic-text{
  color: rgba(230,96,57, 0.8);
  font-weight: 600;
  text-align: center;
}
.basic-content{
  padding-top: 20rpx;
  text-align:center;
}
.module-content{
  padding-top: 20rpx;
  text-indent: 2em;
  text-align:justify;
}
.bottom-action{
  box-sizing: border-box;
  width: 100vw;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background-color: #fff;
  padding: 0 20rpx 40rpx 20rpx;
}
.comment-input{
  /* border: 1rpx solid rgba(225,59,70,0.5); */
  border-radius:40rpx;
  margin-bottom: 0rpx;
  padding-left:40rpx;
  padding-right: 120rpx; 
}
.icon-send{
  color: rgba(225,59,70,0.8);
  position: absolute;
  right: 42rpx;
  top: 0rpx;
  font-size: 62rpx;
}
.activity-action-group{
  width:38vw;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  z-index:2;
}
.action-wrap{
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  box-shadow:0rpx 0rpx 16rpx rgba(230,96,57, 0.8) ;  
  background-color: rgba(255, 255, 255, 0.92);
  display: flex;
  justify-content: center;
  align-items: center;
}
.action-wrap .iconfont{
  font-size: 128%;
  margin-top:-5px;
  color: rgb(230,96,57);
}
.action-wrap.active{
  background-color:rgba(230,96,57, 0.8) ;
  box-shadow:0rpx 0rpx 16rpx rgba(255, 255, 255, 0.92);
}
.action-wrap.active .iconfont{
  color: #fff;
}