/* pages/activityDetail/activityDetail.wxss */
.pic-wrap,.bg-pic{
  width: 100%;
  height: 350rpx;
}
.tab-wrap{
  box-shadow:0 -2rpx 4rpx #999;
  position: relative;
  background-color: #fff;
}
.tab-header{
  height: 80rpx;
  padding:0 40rpx;
}
.tab-item{
  display: inline-block;
  padding: 12rpx 20rpx;
}
.tab-item.active{
  border-bottom: 6rpx solid #E13B46 ;
  color: #E13B46 ; 
}
.tab-body{
  padding: 20rpx 40rpx;
}
.time-item-wrap{
  display: flex;
  align-items: center;
  height: 80rpx;
}
.item-point{
  height: 20rpx;
  width: 20rpx;
  border-radius: 50%;
  background-color: #4BB7FF; 
}
.item-date{
  padding: 0 20rpx;
}
.comment-item-wrap{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 0;
}
.user-img{
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  background-color: #E13B46;
}
.comment-content{
  margin-left: 20rpx;
  flex:1;
  font-size: 80%;
}
.comment-time-text{
  font-size: 80%;
}
.user-name{
  font-weight: 600;
}
.another-user-name{
  font-weight: 600;
  margin: 0 10rpx;
}
.user-msg{
  display: flex;
  justify-content: space-between;
}
.module-wrap{
  padding: 20rpx;
  font-size: 80%;
}
.module-title{
  color: rgba(230,96,57, 0.8);
  font-weight: 600;
  text-align: center;
}
.module-content{
  padding-top: 20rpx;
  text-indent: 2em;
  text-align:justify;
}