/**app.wxss**/
.container{
  color: #555;
  margin: 0 ;
  padding: 0 ;
  min-height: 100vh;
  background-color: #FCFCFC;
}
.input,picker,textarea{
  box-sizing: border-box;
  margin-bottom:40rpx;
  height:72rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
  border: 1rpx solid rgba(225,59,70,0.5);
  background-color: rgba(225,59,70,0.03);
}
picker{
  text-align: center;
}
textarea{
  box-sizing: border-box;
  height: 160rpx;
  width:auto;
  line-height: 42rpx;
  padding: 20rpx;
}
picker{
  padding: 0 18rpx;
  line-height: 72rpx;
}
.button-bottom{
  width: 100%;
  background:linear-gradient(#E66039, #E13B46);
  text-align: center;
  position: fixed;
  bottom: 0rpx;
  left:0rpx;
  color: #fff;
  padding: 20rpx 0;
}
.button-two-bottom{
  width: 100%;
  position: fixed;
  bottom: 40rpx;
  left:0rpx;
  display: flex;
  justify-content: center;
}
.btb-item{
  background:linear-gradient(#E66039, #E13B46);
  color: #fff;
  padding: 20rpx 60rpx;
  margin: 0 20rpx;
  border-radius: 120rpx;
}
.btb-item-white{
  background-color:#fff;
  color: #E13B46;
  border: 1rpx solid #E66039;
  padding: 20rpx 60rpx;
  margin: 0 20rpx;
  border-radius: 120rpx;
}
.upload-wrap{
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(225,59,70,0.5);
  background-color: rgba(225,59,70,0.03);
  text-align: center;
}
.upload-wrap .icon-add{
  color: rgba(225,59,70,0.5);
}
.remark-text{
  font-size: 80%;
  color: #aaa;
  margin-top:20rpx; 
}
.box-shadow{
  box-shadow: 4rpx 4rpx 20rpx #ddd;
}
.btn{
  padding: 20rpx 40rpx;
  border-radius: 80rpx;
  box-shadow: 2rpx 3rpx 10rpx #ddd;
  text-align: center;
}

.btn-blue{
  background-color: #4BB7FF;
  color: #fff;
}
.btn-red{
   background-color: #FF4B57;
   color: #fff;
}

